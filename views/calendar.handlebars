<body>
  <p class="display-none" id="super-secret">{{id}}</p>
  <div class="v19_122 form-group container-fluid form-control">
    <form id="project-form">
      <div class="form-group">
        <label for="grade-select">Select Grade</label>
        <select class="form-control custom-select" id="grade-select">
          <option>0</option>
          <option>1</option>
          <option>2</option>
          <option>3</option>
          <option>4</option>
          <option>5</option>
          <option>6</option>
          <option>7</option>
          <option>8</option>
        </select>
        </select>
      </div>
      <div class="form-group">
        <label for="class-select">Select Class</label>
        <select class="form-control custom-select" id="class-select">
          <option>Math</option>
          <option>English</option>
          <option>Science</option>
        </select>
      </div>
      <div class="form-group">
        <label for="standard-area">Standards Associated with Class</label>
        <textarea class="form-control" id="standard-area" rows="3" readonly></textarea>
      </div>
      <div class="form-group display-none" id="select-div">
        <label for="standard-select">Select Standard</label>
        <select class="form-control custom-select" id="standard-select"></select>
      </div>
  </div>
  <section style="text-align: center">
    <button type="button" class="btn custom-btn" id="add-event">Add Event</button>
    <button type="button" class="btn custom-btn" id="view-calendar">View Events</button>
  </section>
  <main class="display-none" id="event-form-div">
    <div class="form-group">
      <label for="description">Add a Description</label>
      <input type="text" min='1' id="description" class="form-control" placeholder="Add a little description"
        required />
    </div>
    <div class="form-group">
      <label for="start-date-input">Lesson Start Date</label>
      <input type="text" min='1' id="start-date-input" class="form-control" placeholder="When is the start date?"
        required />
    </div>
    <div class="form-group">
      <label for="end-date-input">Lesson End Date</label>
      <input type="text" min='1' id="end-date-input" class="form-control" placeholder="When is the end date?"
        required />
    </div>
    <div>
      <button type="submit" class="btn custom-btn form-group row">Submit Lesson Standard </button>
    </div>
    </form>
  </main>
  
  <section class="display-none" id="calendar-div">
    <ul id="calendar"></ul>
  </section>

  <section class="form-control" id="preview-calendar-div">
    <h5>Scheduled Standards Added</h5>
    <ul id="preview-calendar"></ul>
  </section>

  <div>
    <button type="button" class="btn custom-btn form-group display-none" id="back-button">Go Back</button>
  </div>

  </div>
  </div>

